{
  "name": "tropic",
  "version": "1.4.4",
  "description": "A file browser",
  "main": "main.js",
  "scripts": {
    "clean": "rm -rf installers builds",
    "prestart": "webpack",
    "start": "electron .",
    "build-win-installer": "node scripts/installer-win.js",
    "build-mac-installer": "electron-installer-dmg ./builds/tropic-darwin-x64/tropic.app tropic --icon=./gui/img/palm_trees.icns --out=./installers --overwrite",
    "build-deb-installer": "electron-installer-debian --src builds/tropic-linux-x64/ --dest installers/ --arch amd64",
    "build-linux-bin-tar": "tar -czf installers/tropic-linux-x64.tar.gz builds/tropic-linux-x64/",
    "build-win": "  electron-packager . --icon=./gui/img/palm_trees.ico  --ignore=scripts --ignore=gui/settings.json --out=builds --overwrite --arch=x64 --platform=win32",
    "build-mac": "  electron-packager . --icon=./gui/img/palm_trees.icns --ignore=scripts --ignore=gui/settings.json --out=builds --overwrite --arch=x64 --platform=darwin",
    "build-linux": "electron-packager . --icon=./gui/img/palm_trees.ico  --ignore=scripts --ignore=gui/settings.json --out=builds --overwrite --arch=x64 --platform=linux"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nickrmcclorey/tropic-file-browser.git"
  },
  "author": "Nick McClorey",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nickrmcclorey/tropic-file-browser/issues"
  },
  "homepage": "https://github.com/nickrmcclorey/tropic-file-browser#readme",
  "dependencies": {
    "adm-zip": "^0.4.16",
    "electron-squirrel-startup": "^1.0.0",
    "file-icon-info": "^1.1.1",
    "fs-extra": "^10.0.0",
    "original-fs": "^1.1.0",
    "sudo-prompt": "^8.2.5"
  },
  "devDependencies": {
    "@types/node": "^13.13.52",
    "electron": "^11.1.1",
    "electron-packager": "^15.2.0",
    "electron-winstaller": "^5.0.0",
    "ts-loader": "^6.2.2",
    "typescript": "^3.9.9",
    "webpack": "^5.39.1",
    "webpack-cli": "^3.3.12"
  }
}
