{
  "name": "tropic",
  "version": "1.4.4",
  "description": "A file browser",
  "main": "main.js",
  "scripts": {
    "prestart": "webpack",
    "start": "electron .",
    "prebuild": "rm -r -f ./installer/tropic-win32-x64",
    "build": "electron-packager . --icon=./gui/img/palm_trees.ico --ignore=test.js --ignore=/Newtonsoft.Json.dll --ignore=updater.exe --ignore=hasher.exe --ignore=gui/settings.json --out=installer",
    "build-updater": "csc ./installer/updater.cs -r:./installer/Newtonsoft.Json.dll -win32manifest:./installer/updater-manifest.xml",
    "build-installer": "makensis ./installer/tropic-installer.nsi"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nickrmcclorey/tropic-file-browser.git"
  },
  "author": "Nick McClorey",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nickrmcclorey/tropic-file-browser/issues"
  },
  "homepage": "https://github.com/nickrmcclorey/tropic-file-browser#readme",
  "dependencies": {
    "adm-zip": "^0.4.13",
    "associated-icon": "^1.2.0",
    "file-icon-info": "^1.1.1",
    "hoek": ">=5.0.3",
    "jquery": "^3.4.1",
    "ncp": "^2.0.0",
    "original-fs": "^1.1.0",
    "sudo-prompt": "^8.2.5"
  },
  "devDependencies": {
    "@babel/core": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "babel-loader": "^8.0.6",
    "electron": "^2.0.18",
    "electron-builder": "^20.40.2",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  }
}
