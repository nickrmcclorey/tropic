{
  "name": "tropic",
  "version": "1.4.4",
  "description": "A file browser",
  "main": "main.js",
  "scripts": {
    "prestart": "webpack",
    "start": "electron .",
    "build-win-installer":  "node installer-win.js",
    "build-mac-installer":  "electron-installer-dmg ./builds/tropic-darwin-x64/tropic.app tropic --out=./installers",
    "build-linux-installer": "",
    "build-win":   "electron-packager . --icon=./gui/img/palm_trees.ico --ignore=test.js --ignore=gui/settings.json --out=builds --overwrite --arch=x64 --platform=win32",
    "build-mac":   "electron-packager . --icon=./gui/img/palm_trees.ico --ignore=test.js --ignore=gui/settings.json --out=builds --overwrite --arch=x64 --platform=darwin",
    "build-linux": "electron-packager . --icon=./gui/img/palm_trees.ico --ignore=test.js --ignore=gui/settings.json --out=builds --overwrite --arch=x64 --platform=linux"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nickrmcclorey/tropic-file-browser.git"
  },
  "author": "Nick McClorey",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nickrmcclorey/tropic-file-browser/issues"
  },
  "homepage": "https://github.com/nickrmcclorey/tropic-file-browser#readme",
  "dependencies": {
    "adm-zip": "^0.4.16",
    "electron-squirrel-startup": "^1.0.0",
    "file-icon-info": "^1.1.1",
    "fs-extra": "^10.0.0",
    "original-fs": "^1.1.0",
    "sudo-prompt": "^8.2.5"
  },
  "devDependencies": {
    "@types/node": "^13.13.52",
    "electron": "^11.1.1",
    "electron-installer-dmg": "^3.0.0",
    "electron-packager": "^15.2.0",
    "electron-winstaller": "^5.0.0",
    "ts-loader": "^6.2.2",
    "typescript": "^3.9.9",
    "webpack": "^4.46.0",
    "webpack-cli": "^3.3.12"
  }
}
